<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:textSize="70dp"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/grisOscuro">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical">
                <Button
                    android:id="@+id/boton7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="7"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="4"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="1"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton0"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="0"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:textColor="@color/blanco"
                android:background="@color/grisOscuro">
                <Button
                    android:id="@+id/boton8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="8"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton5"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="5"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="2"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/botonPunto"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="."
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:orientation="vertical">
                <Button
                    android:id="@+id/boton9"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="9"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton6"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="6"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/boton3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="3"
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
                <Button
                    android:id="@+id/botonIgual"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:text="="
                    android:textSize="45dp"
                    android:textColor="@color/blanco"
                    android:background="@color/grisOscuro"
                    android:fontFamily="sans-serif">
                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:background="@color/grisOscuro">
            <Button
                android:id="@+id/botonC"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="C"
                android:textSize="30dp"
                android:background="@color/gris"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif">
            </Button>
            <Button
                android:id="@+id/botonDivision"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="รท"
                android:textSize="30dp"
                android:background="@color/gris"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif">
            </Button>
            <Button
                android:id="@+id/botonMultiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="x"
                android:textSize="30dp"
                android:background="@color/gris"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif"
                android:textAllCaps="false">
            </Button>
            <Button
                android:id="@+id/botonResta"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="-"
                android:textSize="30dp"
                android:background="@color/gris"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif">
            </Button>
            <Button
                android:id="@+id/botonSuma"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="+"
                android:textSize="30dp"
                android:background="@color/gris"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorPrimaryDark">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
